<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../css/laporan.css" />
    <script src="pagination.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <title>Manage Members</title>
    
    
  </head>
  <body>
    <nav class="navigation">
      <h1><%= nama %></h1>
      <a href="/laporan">Laporan</a>
      <a href="/homeAdmin">Home</a>
      <a href="/">Log out</a>
    </nav>
    <section class="container filter">
      <div class="filter">
        <h2 class="">Daftar Member :</h2>
        <!-- dropdown jam dan meja -->
        <form action="#" method="post" class="inline-flex">
          <input
            type="text"
            class="mx-1 px-4 rounded-md border-none focus:outline-none focus:border-none bg-[#f5f5f2] backgdrop-blur-md bg-opacity-50 placeholder-black"
            placeholder="Cari nama member"
          />
          <button
            type="submit"
            value="cari"
            class="mx-1 flex items-center justify-center shadow-3xl bg-black text-white font-semibold text-md px-4 py-2 rounded-md hover:cursor-pointer hover:bg-black/90"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              class="w-6 h-6"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z"
              />
            </svg>
          </button>
          <a
            href="/addmember"
            value="tambah"
            class="mx-1 flex items-center justify-center shadow-3xl bg-black text-white font-semibold text-md px-4 py-2 rounded-md hover:cursor-pointer hover:bg-black/90"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              class="w-6 h-6"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M19 7.5v3m0 0v3m0-3h3m-3 0h-3m-2.25-4.125a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zM4 19.235v-.11a6.375 6.375 0 0112.75 0v.109A12.318 12.318 0 0110.374 21c-2.331 0-4.512-.645-6.374-1.766z"
              />
            </svg>
          </a>
        </form>
      </div>
    </section>
    <section class="table member">
      <table>
        <thead>
          <tr>
            <th>Nama</th>
            <th>Username</th>
            <th>Alamat</th>
            <th>Kelurahan</th>
            <th>Kecamatan</th>
            <th>Kota</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% let i = 1 %>
          <% for(let data of dataPelanggan) { %>
          <tr>
            <td><%= data.namaP %></td>
            <td><%= data.username %></td>
            <td><%= data.alamat %></td>
            <td><%= data.kelurahan %></td>
            <td><%= data.kecamatan %></td>
            <td><%= data.kota %></td>
            <td class="action-btn">
              <form action="/editDataMember/<%= data.idP %>" method="post">
                <button>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="2"
                    stroke="currentColor"
                    class=""
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"
                    />
                  </svg>
                </button>
              </form>
            </td>
          </tr>
          <% i++ %>
          <% } %>
        </tbody>
      </table>
    </section>

<!--Pagination-->
    <div class="pagination">
      <ul>
        <li class="btn prev" onclick="createPagination(totalPages, 4)">
            <span>
                <i class="fas fa-angle-left">Prev</i>
            </span>
        </li>
        <li class="first numb" onclick="createPagination(totalPages, 1)">
            <span>1</span>
        </li>
        <li class="dots">
            <span>...</span>
        </li>
        <li class="numb" onclick="createPagination(totalPages, 4)">
            <span>4</span>
        </li>
        <li class="numb active" onclick="createPagination(totalPages, 5)">
            <span>5</span>
        </li>
        <li class="numb" onclick="createPagination(totalPages, 6)">
            <span>6</span>
        </li>
        <li class="dots">
            <span>...</span>
        </li>
        <li class="last numb" onclick="createPagination(totalPages, 10)">
            <span>10</span>
        </li>
        <li class="btn next" onclick="createPagination(totalPages, 6)">
            <span>
                <i class="fas fa-angle-right">Next</i>
            </span>
        </li>
      </ul>
    </div>
  </body>
</html>
